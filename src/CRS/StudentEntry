       Connect c=new Connect();
    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        Student s=new Student(Integer.parseInt(id.getText()),name.getText(),major.getText(),Integer.parseInt(grade.getText()));
         try {
                    
                    c.connect();
                  
         Statement st=c.conn.createStatement(ResultSet.TYPE_SCROLL_INSENSITIVE,ResultSet.CONCUR_UPDATABLE);
   
                    
                    
               boolean b= st.execute("insert into Student values ('"+s.getId()+"','"+ s.getName()+"','"+ s.getMajor()+"',"+ s.getGrade()+")") ;
                 if(b==false){
                 JOptionPane.showMessageDialog(this, "This record added");
                 }
                 else
                    JOptionPane.showMessageDialog(this, "his record not added"); 
                    
                    
             //       c.disconnect();
                    
                    
                } catch (SQLException ex) {
                    Logger.getLogger(StudentEntry.class.getName()).log(Level.SEVERE, null, ex);
                }
    }                                        

